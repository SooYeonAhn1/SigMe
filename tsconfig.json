{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@app/shared-types": ["packages/shared-types"],
      "@app/utils": ["packages/utils"]
    }
  },
  "include": ["apps/**/*", "packages/**/*", "server/**/*"],
  "extends": "expo/tsconfig.base"
}
